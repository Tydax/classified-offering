@model classified_offering.Models.Participation

@{
    ViewBag.Title = "Add participation";
}

<h2>Add participation</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.OffererID, "OffererID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("OffererID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OffererID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to the classified offering", "Details", "ClassifiedOfferings", new { id = Model.ClassifiedOfferingID }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
