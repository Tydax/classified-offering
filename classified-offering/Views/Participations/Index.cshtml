@model IEnumerable<classified_offering.Models.Participation>

@{
    ViewBag.Title = "List of participations";
}

<h2>List of participations</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClassifiedOffering.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Offerer.Pseudo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Receiver.Pseudo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClassifiedOffering.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Offerer.Pseudo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Receiver.Pseudo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
